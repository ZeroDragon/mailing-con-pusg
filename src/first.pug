extends /markup

block mailer
  - var primary = '#FC4B3B'
  - var secondary = '#0B1633'
  -
    var tableStyle = {
      'width': '800px',
      margin: 'auto',
    }
  - 
    var buttonAlt = {
      border: `1px solid ${primary}`,
      'border-radius': '8px',
      padding: '10px 40px',
      'text-align': 'center',
      'text-decoration': 'none',
      color: primary,
      display: 'inline-block'
    }
  -
    var button = {
      ...buttonAlt,
      margin: 'auto',
      'background-color': primary,
      color: '#fff',
      padding: '10px 80px',
      'box-shadow': `0px 10px 20px -5px ${primary}`,
    }
  - var buttons = { true: buttonAlt, false: button }
  -
    var linkHeader = {
      color: secondary,
      'margin-right': '20px',
      'font-weight': 'bold',
      'text-decoration': 'none',
    }
  - var logo = { color: primary, 'font-weight': 'bold', 'font-size': '30px' }
  - var title = { color: secondary, 'font-weight': 'bold', 'font-size': '25px' }
  - var paragraph = { color: secondary, 'line-height': '1.5em', margin: '30px 30px' }

  mixin tableTag
    table(style = tableStyle, cellpadding="0", cellspacing="0"): block

  mixin button({ alt = false, action = 'javascript:;' })
    a(href=action, target="_blank", style=buttons[alt]): block
  
